<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <net.grobas.view.PolygonImageView
        android:id="@+id/push_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/push_icon"
        app:poly_border="true"
        app:poly_border_color="@color/push_icon_border"
        app:poly_border_width="2dp"
        app:poly_shadow="true"
        app:poly_shadow_color="@color/push_icon_shadow"
        app:poly_vertices="0" />

</FrameLayout>